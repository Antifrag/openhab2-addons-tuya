<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="tuya"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/thing-description-1.0.0.xsd">

    <!-- Power Channel Type -->
    <channel-type id="power-channel">
        <item-type>Switch</item-type>
        <label>Switch power on/off.</label>
        <description>The main power switch (ON or OFF).</description>
    </channel-type>
    <!-- Color Mode Channel Type -->
    <channel-type id="color-mode-channel">
        <item-type>Switch</item-type>
        <label>Switch color mode.</label>
        <description>The mode white (ON) or color (OFF).</description>
    </channel-type>
    <!-- Color Channel Type -->
    <channel-type id="color-channel">
        <item-type>Color</item-type>
        <label>Color.</label>
        <description>The lights color.</description>
    </channel-type>
    <!-- Brightness Channel Type -->
    <channel-type id="brightness-channel">
        <item-type>Number</item-type>
        <label>The brightness.</label>
        <description>The brightness of the lamp (0%..100%).</description>
    </channel-type>
    <!-- Color temperature Channel Type -->
    <channel-type id="color-temperature-channel">
        <item-type>Number</item-type>
        <label>The color temperature.</label>
        <description>The color temperature of the lamp (0%..100%).</description>
    </channel-type>

</thing:thing-descriptions>
